{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "belmond-fansite",
  "compatibility_date": "2025-09-27",
  "observability": {
    "enabled": true
  },
  "assets": {
    // ここを "." から変更します
    "directory": ".", 
    "binding": "ASSETS"
  },
  // 不要なファイルをアップロード対象から除外する設定を追加
  "ignore_assets": [
    "node_modules",
    "python-src",
    ".github",
    "package.json",
    "bun.lockb"
  ],
  "compatibility_flags": [
    "nodejs_compat"
  ]
}